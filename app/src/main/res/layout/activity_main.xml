<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:nfu="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/activity_main_content_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#950101"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_bar_height"
        android:orientation="horizontal">

        <com.nfu.oldwork.view.ButtonExtendM
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"

            android:layout_toEndOf="@+id/btn_service"
            android:layout_toRightOf="@+id/btn_service"

            nfu:buttonType="check"
            nfu:drec="iconUp"
            nfu:iconDrawable="@drawable/home_icon"
            nfu:iconDrawablePress="@drawable/home_icon_press"
            nfu:imgHeight="@dimen/bottom_bar_icon"
            nfu:nfuTextColor="@color/home_item_color"
            nfu:nfuTextSize="@dimen/text_size_12"
            nfu:scType="CENTER"
            nfu:spacing="@dimen/padding_top_2"
            nfu:text="首页"
            nfu:textColorPress="@color/base_red_color" />

        <com.nfu.oldwork.view.ButtonExtendM
            android:id="@+id/btn_study"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/btn_home"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            nfu:buttonType="check"
            nfu:drec="iconUp"
            nfu:iconDrawable="@drawable/study_icon"
            nfu:iconDrawablePress="@drawable/study_icon_press"
            nfu:imgHeight="@dimen/bottom_bar_icon"
            nfu:nfuTextColor="@color/home_item_color"
            nfu:nfuTextSize="@dimen/text_size_12"
            nfu:scType="CENTER"
            nfu:spacing="@dimen/padding_top_2"
            nfu:text="学习"
            nfu:textColorPress="@color/base_red_color" />

        <com.nfu.oldwork.view.ButtonExtendM
            android:id="@+id/btn_communicate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            nfu:buttonType="check"
            nfu:drec="iconUp"
            nfu:iconDrawable="@drawable/communicat_icon"
            nfu:iconDrawablePress="@drawable/communicate_icon_press"
            nfu:imgHeight="@dimen/bottom_bar_icon"
            nfu:nfuTextColor="@color/home_item_color"
            nfu:nfuTextSize="@dimen/text_size_12"
            nfu:scType="CENTER"
            nfu:spacing="@dimen/padding_top_2"
            nfu:text="交流"
            nfu:textColorPress="@color/base_red_color" />
        <com.nfu.oldwork.view.ButtonExtendM
            android:id="@+id/btn_mine"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            nfu:buttonType="check"
            nfu:drec="iconUp"
            nfu:iconDrawable="@drawable/mine_icon"
            nfu:iconDrawablePress="@drawable/mine_icon_press"
            nfu:imgHeight="@dimen/bottom_bar_icon"
            nfu:nfuTextColor="@color/home_item_color"
            nfu:nfuTextSize="@dimen/text_size_12"
            nfu:scType="CENTER"
            nfu:spacing="@dimen/padding_top_2"
            nfu:text="交流"
            nfu:textColorPress="@color/base_red_color" />
