<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:clickable="true"
    android:background="@color/list_tiem_bg"
    android:layout_height="@dimen/magin_60">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardElevation="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/magin_10"
            android:layout_marginRight="@dimen/magin_15">
            <ImageView
                android:id="@+id/icon_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
             />
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/icon_type"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:text="标题"
                android:textColor="@color/base_red_color"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/right_arrow"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:text="2017-8-13"
                android:textColor="@color/base_red_color"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/right_arrow"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>