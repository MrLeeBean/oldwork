<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_title_bar_height"
        android:background="@color/base_red_color"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/activity_main_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/top_bar_query_title"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_schedule"
        android:layout_marginRight="@dimen/magin_15"
        android:layout_marginLeft="@dimen/magin_15"
        android:layout_marginTop="@dimen/magin_80"
        android:background="@color/base_red_color"
        android:text="孝星查询"
        android:textColor="@color/white_color"
        android:textSize="@dimen/text_size_18"
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_48" />

    <Button
        android:id="@+id/btn_balance"
        android:layout_marginRight="@dimen/magin_15"
        android:layout_marginLeft="@dimen/magin_15"
        android:layout_marginTop="@dimen/magin_40"
        android:background="@color/base_red_color"
        android:text="助残卡查询"
        android:textColor="@color/white_color"
        android:textSize="@dimen/text_size_18"
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_48" />

</LinearLayout>