                android:layout_marginRight="@dimen/magin_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="负责声明"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

