<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title_bar"
        layout="@layout/fragment_title_bar" />
    <android.support.v7.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_40"
        android:layout_marginTop="@dimen/magin_15"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/magin_40"
            android:paddingLeft="@dimen/magin_15"
            android:paddingRight="@dimen/magin_15">
            <ImageView
                android:id="@+id/right_arrow"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:src="@drawable/right_arrow"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_title"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/base_red_color"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/right_arrow"
                android:layout_marginRight="@dimen/magin_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="清除图片缓存"/>
            <TextView
                android:id="@+id/tv_cachesize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_15"
                android:layout_centerVertical="true"
                android:textColor="@color/base_red_color"
                android:layout_toLeftOf="@id/right_arrow"
                android:text="0M"
                android:layout_marginRight="@dimen/magin_10"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_40"
        android:layout_marginTop="@dimen/magin_5"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/magin_40"
            android:paddingLeft="@dimen/magin_15"
            android:paddingRight="@dimen/magin_15">
            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/switchbutton"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:layout_marginTop="@dimen/magin_8"
                app:kswThumbDrawable="@drawable/ios_thumb_selector"
                app:kswBackDrawable="@drawable/ios_back_drawable"
                app:kswAnimationDuration="100"
                app:kswBackMeasureRatio="1.8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:kswThumbMarginBottom="-8dp"
                app:kswThumbMarginLeft="-5dp"
                app:kswThumbMarginRight="-5dp"
                app:kswThumbMarginTop="-2.5dp"/>
            <TextView
                android:id="@+id/tv_title2"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/base_red_color"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/switchbutton"
                android:layout_marginRight="@dimen/magin_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="非WIFI下图片下载"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_40"
        android:layout_marginTop="@dimen/magin_5"
        android:background="@color/list_tiem_bg"
        android:clickable="true"
        android:visibility="gone"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
