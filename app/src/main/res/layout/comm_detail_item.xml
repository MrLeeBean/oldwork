<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:clickable="true"
    android:background="@color/list_tiem_bg"
    android:layout_height="@dimen/magin_100">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_99"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardElevation="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/magin_15"
            android:layout_marginRight="@dimen/magin_15">

            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_marginTop="@dimen/magin_2"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_head"
                    android:src="@drawable/def_turn"
                    android:scaleType="centerCrop"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16"
                    android:layout_marginTop="@dimen/magin_5"
                    android:textColor="@color/color_666"
                    android:layout_toRightOf="@id/iv_head"
                    android:layout_marginLeft="10dp"
                    android:text="周老"/>
                <TextView
                    android:id="@+id/tv_sequence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/color_666"
                    android:layout_alignTop="@id/tv_name"
                    android:layout_alignParentRight="true"
                    android:text="楼主"/>
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/color_666"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/magin_5"
                    android:text="2017-08-10 15:33"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_content"
                android:layout_below="@id/rl_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16"
                android:layout_marginTop="@dimen/magin_5"
                android:textColor="@color/color_666"
                android:text="腰间盘突出又犯了"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>