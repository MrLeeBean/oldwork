<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:clickable="true"
    android:background="@color/list_tiem_bg"
    android:layout_height="@dimen/magin_120">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_119"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardElevation="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/magin_15"
            android:layout_marginRight="@dimen/magin_15">
            <LinearLayout
                android:id="@+id/rl_top"
                android:layout_marginTop="@dimen/magin_5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_18"
                    android:textColor="@color/color_666"
                    android:text="姓名："/>
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_18"
                    android:textColor="@color/base_red_color"
                    android:text="昨天"/>
                <TextView
                    android:id="@+id/tv_sex_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/magin_20"
                    android:textSize="@dimen/text_size_18"
                    android:textColor="@color/color_666"
                    android:text="性别："/>
                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_18"
                    android:textColor="@color/base_red_color"
                    android:text="男"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rl_center"
                android:layout_marginTop="@dimen/magin_5"
                android:layout_below="@id/rl_top"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv__starnum_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_18"
                    android:textColor="@color/color_666"
                    android:text="孝星次数："/>
                <TextView
                    android:id="@+id/tv__starnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv__starnum_label"
                    android:layout_alignTop="@id/tv__starnum_label"
                    android:textSize="@dimen/text_size_18"
                    android:textColor="@color/base_red_color"
                    android:text="12"/>
                <TextView
                    android:id="@+id/tv__nation_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/magin_30"
                    android:textSize="@dimen/text_size_18"
                    android:textColor="@color/color_666"
                    android:text="民族："/>
                <TextView
                    android:id="@+id/tv_nation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_18"
                    android:textColor="@color/base_red_color"
                    android:text="汉"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv__cardnum_label"
                android:layout_below="@id/rl_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/magin_5"
                android:textSize="@dimen/text_size_18"
                android:textColor="@color/color_666"
                android:text="证件号码："/>
            <TextView
                android:id="@+id/tv__cardnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv__cardnum_label"
                android:layout_alignTop="@id/tv__cardnum_label"
                android:textSize="@dimen/text_size_18"
                android:textColor="@color/base_red_color"
                android:text="121254545745"/>

            <TextView
                android:id="@+id/tv__state_label"
                android:layout_below="@id/tv__cardnum_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/magin_5"
                android:textSize="@dimen/text_size_18"
                android:textColor="@color/color_666"
                android:text="状态："/>
            <TextView
                android:id="@+id/tv__state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv__state_label"
                android:layout_alignTop="@id/tv__state_label"
                android:textSize="@dimen/text_size_18"
                android:textColor="@color/base_red_color"
                android:text="12"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>