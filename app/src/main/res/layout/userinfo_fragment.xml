<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title_bar"
        layout="@layout/fragment_title_bar" />

    <LinearLayout
        android:id="@+id/live_setting_groupname_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/magin_30"
        android:layout_marginLeft="@dimen/magin_15"
        android:layout_marginRight="@dimen/magin_15"
        android:layout_marginTop="@dimen/magin_30"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/magin_48"

            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="@dimen/service_text_width"
                android:layout_height="wrap_content"

                android:text="用户名称:"
                android:textColor="@color/home_item_color"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/magin_20"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="XXXXXX"
                android:textColor="@color/home_item_color"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/magin_48"
            android:gravity="center_vertical">

            <TextView

                android:layout_width="@dimen/service_text_width"
                android:layout_height="wrap_content"
                android:text="所属市级名称:"
                android:textColor="@color/home_item_color"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/cityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="XXXXXX"
                android:textColor="@color/home_item_color"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/magin_48"
            android:layout_marginTop="@dimen/magin_10"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/service_text_width"
                android:layout_height="wrap_content"
                android:text="所属区县名称:"
                android:textColor="@color/home_item_color"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/countryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/magin_20"
                android:text="XXXXXX"
                android:textColor="@color/home_item_color"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/magin_48"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/service_text_width"
                android:layout_height="wrap_content"
                android:text="所属街道名称:"
                android:textColor="@color/home_item_color"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/streetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/magin_20"
                android:text="XXXXXX"
                android:textColor="@color/home_item_color"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/magin_48"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/service_text_width"
                android:layout_height="wrap_content"
                android:text="所属社区名称:"
                android:textColor="@color/home_item_color"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/communityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/magin_20"
                android:text="XXXXXX"
                android:textColor="@color/home_item_color"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/magin_48"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/service_text_width"
                android:layout_height="wrap_content"
                android:text="所属部门名称:"
                android:textColor="@color/home_item_color"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/deptName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/magin_20"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="XXXXXX"
                android:textColor="@color/home_item_color"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
