<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_title_bar_height"
        android:background="@color/base_red_color"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/activity_main_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/top_bar_mine_title"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/white">

        <com.nfu.oldwork.view.CircleImageView
            android:id="@+id/civ_logo"
            android:layout_width="@dimen/update_logo_icon"
            android:layout_height="@dimen/update_logo_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/magin_30"
            android:layout_marginTop="@dimen/magin_10"
            android:src="@drawable/tu" />

        <TextView
            android:id="@+id/login_tv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/civ_logo"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:text="点击登录"
            android:textColor="@color/home_item_color"
            android:textSize="@dimen/text_size_18" />

    </RelativeLayout>

    <android.support.v7.widget.CardView

        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_48"
        android:layout_marginTop="@dimen/magin_15"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/magin_40"
            android:paddingLeft="@dimen/magin_15"
            android:layout_gravity="center_vertical"
            android:paddingRight="@dimen/magin_15">

            <ImageView
                android:id="@+id/back_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/feedback" />

            <ImageView
                android:id="@+id/right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/right_arrow" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/magin_30"
                android:layout_toLeftOf="@id/right_arrow"
                android:text="意见反馈"
                android:textColor="@color/color_666"
                android:textSize="@dimen/text_size_15" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_48"
        android:layout_marginTop="1dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/magin_40"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/magin_15"
            android:paddingRight="@dimen/magin_15">

            <ImageView
                android:id="@+id/setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/setting_icon" />

            <ImageView
                android:id="@+id/right_arrow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/right_arrow" />

            <TextView
                android:id="@+id/tv_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/magin_30"
                android:layout_toLeftOf="@id/right_arrow2"
                android:text="设置"
                android:textColor="@color/color_666"
                android:textSize="@dimen/text_size_15" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:id="@+id/card_view3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_48"
        android:layout_marginTop="1dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/magin_40"
            android:paddingLeft="@dimen/magin_15"
            android:paddingRight="@dimen/magin_15">

            <ImageView
                android:id="@+id/update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/update_icon" />

            <ImageView
                android:id="@+id/right_arrow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/right_arrow" />

            <TextView
                android:id="@+id/tv_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/magin_30"
                android:layout_toLeftOf="@id/right_arrow3"
                android:text="版本升级"
                android:textColor="@color/color_666"
                android:textSize="@dimen/text_size_15" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView

        android:id="@+id/card_view4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_48"
        android:layout_marginTop="1dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/magin_40"
            android:paddingLeft="@dimen/magin_15"
            android:layout_gravity="center_vertical"
            android:paddingRight="@dimen/magin_15">

            <ImageView
                android:id="@+id/persion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/person_icon" />

            <ImageView
                android:id="@+id/right_arrow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/right_arrow" />

            <TextView
                android:id="@+id/tv_title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/magin_30"
                android:layout_toLeftOf="@id/right_arrow4"
                android:text="个人详情"
                android:textColor="@color/color_666"
                android:textSize="@dimen/text_size_15" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>