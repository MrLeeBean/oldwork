<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include
        android:id="@+id/title_bar"
        layout="@layout/fragment_title_bar" />


    <android.support.v7.widget.CardView

        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_48"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/magin_40"
            android:paddingLeft="@dimen/magin_15"
            android:layout_gravity="center_vertical"
            android:paddingRight="@dimen/magin_15">

            <ImageView
                android:id="@+id/right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/right_arrow" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/magin_10"
                android:layout_toLeftOf="@id/right_arrow"
                android:text="个人资料"
                android:textColor="@color/base_red_color"
                android:textSize="@dimen/text_size_15" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_48"
        android:layout_marginTop="@dimen/magin_8"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/magin_40"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/magin_15"
            android:paddingRight="@dimen/magin_15">


            <ImageView
                android:id="@+id/right_arrow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/right_arrow" />

            <TextView
                android:id="@+id/tv_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/magin_10"
                android:layout_toLeftOf="@id/right_arrow2"
                android:text="绑定手机"
                android:textColor="@color/base_red_color"
                android:textSize="@dimen/text_size_15" />
            <TextView
                android:id="@+id/tv_bindstate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/magin_20"
                android:layout_toLeftOf="@id/right_arrow2"
                android:text="已绑定"
                android:textColor="@color/base_red_color"
                android:textSize="@dimen/text_size_15" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:id="@+id/card_view3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_48"
        android:layout_marginTop="1dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/magin_40"
            android:paddingLeft="@dimen/magin_15"
            android:paddingRight="@dimen/magin_15">


            <ImageView
                android:id="@+id/right_arrow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/right_arrow" />

            <TextView
                android:id="@+id/tv_resetpw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/magin_10"
                android:layout_toLeftOf="@id/right_arrow3"
                android:text="修改密码"
                android:textColor="@color/base_red_color"
                android:textSize="@dimen/text_size_15" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>